<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".FinalizarViajeFragment_2">


    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|fill"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="#626262">
        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Cuéntanos tu experiencia!"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/text_formaDePago"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/intentar_conexion"
                android:text="Forma de pago"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_efectivo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/intentar_conexion"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/text_efect4ivo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/intentar_conexion"
                android:textAlignment="center"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_mensaje"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:gravity="fill_horizontal"
                android:background="@drawable/ic_button_favoritos"
                android:hint="Escribe un comentario..."
                android:inputType="textMultiLine"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_enviar_mensaje"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_button_favoritos"
                android:text="Listo"
                android:textSize="20dp"
                android:layout_gravity="center"/>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>