<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:background="#fdfdfd"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_online_shop"
                android:textAlignment="center"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btn_cancelar"
                android:layout_width="26dp"
                android:layout_height="29dp"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGris"
                android:layout_marginBottom="10dp">

            </View>


            <EditText
                android:id="@+id/text_pedido"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="escriba el pedido"
                android:inputType="textMultiLine"
                android:textColor="@color/colorBlack"
                android:background="@drawable/ic_button_border_gris"
                android:padding="5dp"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/text_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_button_border_gris"
                android:gravity="fill_horizontal"
                android:hint="Descripcion.."
                android:inputType="textMultiLine"
                android:minHeight="70dp"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/_cancedfglacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_minus_rest"
                android:layout_margin="5dp"
                android:text="Aceptar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/text_cantidad"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="number"
                android:minHeight="50dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/_cancelacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_add_sum"
                android:layout_margin="5dp"
                android:text="Aceptar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_confirmar_togo"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_button_favoritos"
                android:text="Agregar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_editar_togo"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_margin="5dp"
                android:background="@drawable/ic_button_favoritos"
                android:visibility="gone"
                android:text="Editar"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>